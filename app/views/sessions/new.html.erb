
<h4 class="ui center aligned medium icon header">
	Welcome to MessageMe <br>
  <i class="circular orange shutdown icon"></i>
  Login to Continue 
</h4>

<div class="ui fluid raised card">
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: { class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
        	<%= f.label :username, "username" %>
          <div class="ui left icon input">
			<%= f.text_field :username, placeholder: "Type in your username" %>
			<i class="user icon"></i>

          </div>
        </div>
        <div class="field">
	          <%= f.label :password, "Password" %>

		  <div class="ui left icon input">
	          <%= f.password_field :password, placeholder: "Type in your password" %>
            <i class="lock icon"></i>
          </div>
        </div>
                       <%= f.button "Login", class: "ui orange submit button" %>
                       <% end %>

      </div>
      

    
    <div class="middle aligned column">
      <div class="ui orange big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    <i class="OR"></i>
  </div>
</div>
</div>